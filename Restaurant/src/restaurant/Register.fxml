<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
           xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="restaurant.management.system.RegisterController"
           stylesheets="@logindesign.css">

   <children>
      <AnchorPane fx:id="registerForm" prefHeight="400.0" prefWidth="600.0">

         <!-- Left Form -->
         <AnchorPane prefHeight="400.0" prefWidth="300.0" styleClass="left-form">
            <children>
               <Label layoutX="60.0" layoutY="100.0" text="Create Account">
                  <font>
                     <Font name="Berlin Sans FB" size="28.0" />
                  </font>
               </Label>

               <!-- أيقونة الشخص -->
               <FontAwesomeIconView fill="#3796a7" glyphName="USER_PLUS" layoutX="130.0" layoutY="70.0" size="4em"/>

               <TextField fx:id="regUsername" layoutX="40.0" layoutY="160.0" prefHeight="30.0" prefWidth="220.0" promptText="Username" styleClass="textfield"/>
               <PasswordField fx:id="regPassword" layoutX="40.0" layoutY="200.0" prefHeight="30.0" prefWidth="220.0" promptText="Password" styleClass="textfield"/>

               <Button fx:id="registerBtn" layoutX="100.0" layoutY="265.0" mnemonicParsing="false" onAction="#registerUser" prefHeight="40.0" prefWidth="100.0" styleClass="register-btn" text="Register" />

               <!-- Hyperlink للرجوع للـ Login -->
               <Hyperlink fx:id="loginLink" layoutX="50.0" layoutY="320.0" text="Sign in With Your Account" onAction="#openLoginForm"/>
            </children>
         </AnchorPane>

         <!-- Right Form -->
         <AnchorPane layoutX="300.0" prefHeight="400.0" prefWidth="300.0" styleClass="right-form">
            <children>
               <Button fx:id="closeBtn" layoutX="273.0" layoutY="1.0" mnemonicParsing="false" onAction="#close" prefHeight="24.0" prefWidth="24.0" styleClass="close">
                  <graphic>
                     <FontAwesomeIconView fill="WHITE" glyphName="CLOSE" />
                  </graphic>
               </Button>

               <FontAwesomeIconView fill="WHITE" glyphName="BUILDING" layoutX="110.0" layoutY="182.0" size="10em"/>
               <Label layoutX="53.0" layoutY="217.0" text="Restaurant Management System" textFill="WHITE">
                  <font>
                     <Font name="Tahoma" size="15.0" />
                  </font>
               </Label>
            </children>
         </AnchorPane>

      </AnchorPane>
   </children>
</StackPane>
